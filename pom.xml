<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>io.wcm.devops</groupId>
    <artifactId>io.wcm.devops.parent_toplevel</artifactId>
    <version>1.2.4</version>
    <relativePath />
  </parent>

  <groupId>io.wcm.devops.conga.definitions</groupId>
  <artifactId>io.wcm.devops.conga.definitions.aem.root</artifactId>
  <version>1.8.3-SNAPSHOT</version>
  <packaging>pom</packaging>

  <name>CONGA AEM Definitions</name>
  <description>Root POM for wcm.io CONGA Roles and Templates for AEM.</description>
  <url>${site.url}/${site.url.module.prefix}/</url>

  <scm>
    <connection>scm:git:https://github.com/wcm-io-devops/conga-aem-definitions.git</connection>
    <developerConnection>scm:git:https://github.com/wcm-io-devops/conga-aem-definitions.git</developerConnection>
    <url>https://github.com/wcm-io-devops/conga-aem-definitions</url>
    <tag>HEAD</tag>
  </scm>

  <properties>
    <site.url.module.prefix>conga/definitions/aem</site.url.module.prefix>
  </properties>

  <modules>
    <module>conga-aem-definitions</module>
    <module>example</module>
  </modules>

  <build>
    <plugins>

      <!-- do not deploy this hierarchy pom into maven repository -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-deploy-plugin</artifactId>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>

    </plugins>
  </build>

  <distributionManagement>
    <site>
      <id>${site.deploy.id}</id>
      <url>${site.deploy.url}${site.url.module.prefix}</url>
    </site>
  </distributionManagement>

</project>
